<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RewardsApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
    </style>

    <!--    Set app color to the status bar-->
    <style name="AppPrimaryColorTheme" parent="Theme.RewardsApp">

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Orange</item>
        <item name="android:editTextColor">@color/Orange</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="colorAccent">@color/Orange</item>
    </style>

    <!--    Choose service bottom sheet theme-->
    <style name="ChooseServiceBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ChooseServiceModalStyle</item>

        <!--        For Android 10 to own ward navigation button issue -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="ChooseServiceModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/_450sdp</item>
    </style>

</resources>